<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileImage.Views.ProductDetailsView"
             xmlns:local="clr-namespace:MobileImage.ViewModels">
    <ContentPage.BindingContext>
        <local:HomeViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions></Grid.RowDefinitions>
            <StackLayout Margin="0,120,0,50">
                <Frame HasShadow="True"
                   BorderColor="DarkGray"
                   CornerRadius="5"
                   Margin="5,0,5,0"
                   HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand">
                    <StackLayout Padding="0" Margin="15,5">
                        <Label Text="{Binding SelectedProduct.Name}"
                           FontAttributes="Bold"
                           FontSize="Large"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                        <Image Source="{Binding SelectedProduct.Url}"
                           Aspect="AspectFill"
                           HeightRequest="150"
                           WidthRequest="150"
                           HorizontalOptions="Center" />
                        <Label Text="{Binding SelectedProduct.Description}"
                           HorizontalOptions="Center" />
                        <Label Text="{Binding SelectedProduct.Price}"
                           FontAttributes="Italic"
                           TextColor="Red"
                           HorizontalOptions="Center"
                           MaxLines="5"
                           LineBreakMode="TailTruncation" />

                    </StackLayout>
                </Frame>
                <StackLayout Padding="0" Spacing="1">
                    <Button Text="ซื้อเลย" BackgroundColor="Black" TextColor="White" CornerRadius="30" Margin="5" />
                    <Button Text="ย้อนกลับ" Command="{Binding BackCommand}" BackgroundColor="#d73c3c" TextColor="White" CornerRadius="30" Margin="5" />
                </StackLayout>

            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>